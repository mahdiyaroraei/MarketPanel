<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="mahdiyar.ir.marketpanel">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".core.ApplicationLoader"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        tools:replace="icon">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.MenuActivity" />
        <activity
            android:name=".ui.ProductsActivity"
            android:theme="@style/AppThemeNoActionBar" />
        <activity android:name=".ui.EditProductActivity" />
        <activity android:name="com.theartofdev.edmodo.cropper.CropImageActivity" />
        <activity android:name=".ui.ChromaKeyActivity" />
        <activity
            android:name=".ui.CategoryActivity"
            android:theme="@style/AppThemeNoActionBar" />
        <activity android:name=".ui.EditCategoryActivity"></activity>
    </application>

</manifest>